<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <am.acba.component.fileUpload.FileUpload
        android:id="@+id/fileUpload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:fileUploadState="Preview"
        app:layout_constraintBottom_toTopOf="@id/btnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <am.acba.component.button.PrimaryButton
        android:id="@+id/btnPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:enabled="true"
        android:text="Հաստատել"
        app:layout_constraintBottom_toTopOf="@id/btnGhost" />

    <am.acba.component.button.PrimaryButton
        android:id="@+id/btnGhost"
        style="@style/Button.Style.Ghost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:enabled="true"
        android:text="Նորից նկարել"
        app:icon="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>