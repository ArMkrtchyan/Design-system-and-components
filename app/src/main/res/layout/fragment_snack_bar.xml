<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <am.acba.component.toolbar.PrimaryToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Snackbar" />

    <am.acba.component.textView.PrimaryTextView
        style="@style/Subtitle1.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <am.acba.component.button.PrimaryButton
            android:id="@+id/show_snackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Snackbar" />

        <am.acba.component.button.PrimaryButton
            android:id="@+id/show_snackbar_with_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Snackbar with icon" />

        <am.acba.component.button.PrimaryButton
            android:id="@+id/show_snackbar_with_lottie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Snackbar with lottie" />

        <am.acba.component.button.PrimaryButton
            android:id="@+id/show_snackbar_with_close_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Snackbar with close icon" />

        <am.acba.component.button.PrimaryButton
            android:id="@+id/show_snackbar_with_icon_and_close_aicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Snackbar with close icon and icon" />

        <am.acba.component.button.PrimaryButton
            android:id="@+id/show_snackbar_with_lottie_and_close_aicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Snackbar with close icon and lottie" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>