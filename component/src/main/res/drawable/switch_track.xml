<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_full" />
            <solid android:color="?attr/backgroundBrandDisable" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_full" />
            <solid android:color="?attr/backgroundBrand" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_full" />
            <stroke android:width="1dp" android:color="?attr/borderBrandTonal1Disable" />
            <solid android:color="?attr/backgroundBrandDisable" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_full" />
            <stroke android:width="2dp" android:color="?attr/borderBase" />
            <solid android:color="?attr/backgroundTonal2" />
        </shape>
    </item>
</selector>