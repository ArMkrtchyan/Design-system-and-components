<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_8" />
            <stroke android:width="1dp" android:color="?attr/contentBrandTonal1" />
            <solid android:color="?attr/backgroundTonal2" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_8" />
            <stroke android:width="1dp" android:color="?attr/contentBrandTonal1Disable" />
            <solid android:color="#00000000" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_8" />
            <stroke android:width="1dp" android:color="?attr/contentBrandTonal1" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</selector>