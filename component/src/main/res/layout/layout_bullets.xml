<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <am.acba.component.imageView.PrimaryImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_success_small"
        android:tint="?attr/contentBrand" />

    <am.acba.component.textView.PrimaryTextView
        android:id="@+id/title"
        style="@style/Small.Regular"
        tools:text="Հաշվին առկա միջոցների օգտագործում՝ առանց կուտակված տոկոսագումարների կորստի"
        android:layout_width="0dp"
        android:layout_marginStart="4dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:lineHeight="18dp"
        android:gravity="center_vertical" />
</LinearLayout>