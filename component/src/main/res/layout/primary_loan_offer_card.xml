<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_corner"
    android:backgroundTint="?attr/backgroundAlternative6"
    app:layoutDescription="@xml/primary_loan_offer_card_scene">

    <am.acba.component.textView.PrimaryTextView
        android:id="@+id/loan_offer_card_title"
        style="@style/XSmall.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="վարկային սահմանաչափ"
        app:layout_constraintEnd_toStartOf="@id/loan_offer_card_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <am.acba.component.textView.PrimaryTextView
        android:id="@+id/loan_offer_card_amount_with_currency"
        style="@style/Heading6.Bold"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:minHeight="32dp"
        android:text="10,000,000.00 AMD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loan_offer_card_title" />

    <am.acba.component.textView.PrimaryTextView
        android:id="@+id/loan_offer_card_end_date"
        style="@style/XSmall.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:text="Վերջնաժամկետ - 12/09/2024"
        app:layout_constraintBottom_toBottomOf="@id/loan_offer_card_badge"
        app:layout_constraintEnd_toStartOf="@id/loan_offer_card_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/loan_offer_card_badge" />

    <am.acba.component.badge.PrimaryBadge
        android:id="@+id/loan_offer_card_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:badgeBackgroundTint="?attr/backgroundBrand"
        app:badgeText="new"
        app:badgeType="Text"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loan_offer_card_amount_with_currency" />

    <am.acba.component.imageView.PrimaryImageView
        android:id="@+id/loan_offer_card_arrow_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/background_rounded"
        android:backgroundTint="?attr/backgroundInverse"
        android:backgroundTintMode="add"
        android:padding="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_right"
        android:tint="?attr/contentInverse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.motion.widget.MotionLayout>