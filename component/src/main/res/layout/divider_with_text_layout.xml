<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/divider_start"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:backgroundTintMode="src_over"
        android:layout_gravity="center_vertical"
        android:background="@drawable/divider_background" />

    <am.acba.component.textView.PrimaryTextView
        android:id="@+id/divider_text"
        style="@style/Small.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="8dp"
        android:singleLine="true"
        android:textColor="?attr/contentPrimaryTonal1"
        tools:maxWidth="350dp"
        tools:text="Divider" />

    <View
        android:id="@+id/divider_end"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:backgroundTintMode="src_over"
        android:layout_gravity="center_vertical"
        android:background="@drawable/divider_background" />
</LinearLayout>