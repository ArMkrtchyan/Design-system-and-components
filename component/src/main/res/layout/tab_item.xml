<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/spacing_4"
    android:background="@android:color/transparent">

    <am.acba.component.textView.PrimaryTextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_gravity="center"
        tools:text="Քարտային գործարքներ "
        android:textColor="@color/tab_item_selector"
        android:textSize="@dimen/text_size_14" />

    <am.acba.component.textView.PrimaryTextView
        android:id="@+id/item_badge_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="18dp"
        android:minHeight="18dp"
        android:layout_marginStart="8dp"
        tools:text="44+"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@drawable/tab_item_selector"
        android:textColor="@color/tab_item_count_selector"
        android:gravity="center"
        android:textSize="@dimen/text_size_12" />
</LinearLayout>
