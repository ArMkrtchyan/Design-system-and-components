<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasePrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_primary_brand</item>
        <item name="android:textColor">@color/content_secondary_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="iconTint">@color/content_secondary_selector</item>
        <item name="iconPadding">@dimen/spacing_8</item>
        <item name="iconGravity">textStart</item>
        <item name="android:paddingStart">@dimen/spacing_24</item>
        <item name="android:paddingEnd">@dimen/spacing_24</item>
        <item name="android:paddingTop">@dimen/spacing_14</item>
        <item name="android:paddingBottom">@dimen/spacing_14</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BaseSecondaryButtonStyle" parent="BasePrimaryButtonStyle">
        <item name="android:background">@drawable/background_secondary_brand</item>
        <item name="android:textColor">@color/content_primary_selector</item>
        <item name="iconTint">@color/content_primary_selector</item>
    </style>

    <style name="BaseGhostButtonStyle" parent="BasePrimaryButtonStyle">
        <item name="android:background">@drawable/background_ghost_brand</item>
        <item name="android:textColor">@color/content_primary_selector</item>
        <item name="iconTint">@color/content_primary_selector</item>
    </style>

    <style name="BasePrimaryActionTextButtonStyle">

    </style>

    <style name="BasePrimaryActionTextStyle" parent="Small.Regular">

    </style>

    <style name="Button.Style.Primary" parent="BasePrimaryButtonStyle" />

    <style name="Button.Style.Secondary" parent="BaseSecondaryButtonStyle" />

    <style name="Button.Style.Ghost" parent="BaseGhostButtonStyle" />

    <style name="Button.Style.ActionText" parent="BasePrimaryActionTextButtonStyle" />

    <style name="Button.Style.Text" parent="BasePrimaryActionTextStyle" />

</resources>