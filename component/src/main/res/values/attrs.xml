<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="isPreventClick" format="boolean" />
    <attr name="clickInterval" format="integer" />

    <declare-styleable name="ds">

        <attr name="primaryButtonStyle" format="reference" />
        <attr name="primaryActionTextButtonStyle" format="reference" />
        <attr name="primaryInputStyle" format="reference" />
        <attr name="searchInputStyle" format="reference" />
        <attr name="inputEditTextStyle" format="reference" />
        <attr name="exchangeRatesStyle" format="reference" />
        <attr name="primaryToolbarStyle" format="reference" />
        <attr name="primaryCheckboxStyle" format="reference" />
        <attr name="primarySwitcherStyle" format="reference" />
        <attr name="primaryImageViewStyle" format="reference" />
        <attr name="primaryRadioButtonStyle" format="reference" />
        <attr name="primaryTextViewStyle" format="reference" />

        <!-- Backgrounds -->
        <attr name="backgroundBase" format="color" />
        <attr name="backgroundBrand" format="color" />
        <attr name="backgroundBrandPressed" format="color" />
        <attr name="backgroundBrandDisable" format="color" />
        <attr name="backgroundTonal1" format="color" />
        <attr name="backgroundTonal2" format="color" />
        <attr name="backgroundTonal2ReadOnly" format="color" />
        <attr name="backgroundTonal2Disable" format="color" />
        <attr name="backgroundTonal3" format="color" />
        <attr name="backgroundDanger" format="color" />
        <attr name="backgroundDangerTonal1" format="color" />
        <attr name="backgroundSuccess" format="color" />
        <attr name="backgroundInfo" format="color" />
        <attr name="backgroundWarning" format="color" />
        <attr name="backgroundPending" format="color" />
        <attr name="backgroundAlternative" format="color" />
        <attr name="backgroundAlternative2" format="color" />
        <attr name="backgroundAlternative3" format="color" />
        <attr name="backgroundAlternative4" format="color" />
        <attr name="backgroundAlternative5" format="color" />
        <attr name="backgroundAlternative6" format="color" />

        <!-- Borders -->
        <attr name="borderBase" format="color" />
        <attr name="borderPrimary" format="color" />
        <attr name="borderBrand" format="color" />
        <attr name="borderBrandTonal1" format="color" />
        <attr name="borderBrandTonal1Disable" format="color" />
        <attr name="borderSecondary" format="color" />
        <attr name="borderNeutral" format="color" />
        <attr name="borderDanger" format="color" />

        <!-- Content -->
        <attr name="contentBrand" format="color" />
        <attr name="contentBrandTonal1" format="color" />
        <attr name="contentBrandTonal1Disable" format="color" />
        <attr name="contentPrimary" format="color" />
        <attr name="contentPrimaryDisable" format="color" />
        <attr name="contentPrimaryTonal1" format="color" />
        <attr name="contentPrimaryTonal2" format="color" />
        <attr name="contentPrimaryTonal1Disable" format="color" />
        <attr name="contentSecondary" format="color" />
        <attr name="contentSecondaryDisable" format="color" />
        <attr name="contentDanger" format="color" />
        <attr name="contentDangerTonal1" format="color" />
        <attr name="contentSuccessTonal1" format="color" />
        <attr name="contentInfoTonal1" format="color" />
        <attr name="contentWarning" format="color" />
        <attr name="contentWarningTonal1" format="color" />
        <attr name="contentPending" format="color" />
        <attr name="contentAlternative" format="color" />
        <attr name="contentAlternative2" format="color" />
        <attr name="contentAlternative3" format="color" />
        <attr name="contentAlternative4" format="color" />
        <attr name="contentAlternative5" format="color" />
        <attr name="contentAlternative6" format="color" />
    </declare-styleable>

    <declare-styleable name="PrimaryButton">
        <attr name="clickInterval" />
        <attr name="isPreventClick" />
    </declare-styleable>

    <declare-styleable name="PrimaryActionTextButton">
        <attr name="clickInterval" />
        <attr name="isPreventClick" />
        <attr name="android:text" />
        <attr name="android:textAppearance" />
        <attr name="actionButtonType" format="enum">
            <enum name="ActionButton" value="0" />
            <enum name="Avatar" value="1" />
            <enum name="Text" value="2" />
        </attr>
        <attr name="showActionText" format="boolean" />
        <attr name="badgeChecked" format="boolean" />
        <attr name="checkable" format="boolean" />
        <attr name="badgeIcon" format="reference" />
        <attr name="badgeIconGravity" format="enum">
            <enum name="Bottom" value="0" />
            <enum name="Top" value="1" />
        </attr>
        <attr name="actionIcon" format="reference" />
        <attr name="actionIconSize" format="enum">
            <enum name="XLarge" value="0" />
            <enum name="Large" value="1" />
            <enum name="Medium" value="2" />
            <enum name="Small" value="3" />
            <enum name="XSmall" value="4" />
        </attr>
        <attr name="actionIconBackground" format="reference" />
        <attr name="actionIconTint" format="color" />
        <attr name="actionIconPadding" format="dimension" />
        <attr name="textDrawableColor" format="color" />
        <attr name="textDrawableBackgroundColor" format="color" />
    </declare-styleable>
    <declare-styleable name="PrimaryInput">
        <attr name="textMaxLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="SearchInput">
        <attr name="withBackIcon" format="boolean" />
        <attr name="android:hint" />
        <attr name="android:text" />
    </declare-styleable>
    <declare-styleable name="PrimaryEditText">

    </declare-styleable>

    <declare-styleable name="ExchangeRatesButton">

    </declare-styleable>

    <declare-styleable name="PrimaryCheckBox">

    </declare-styleable>

    <declare-styleable name="PrimaryRadioButton">

    </declare-styleable>

    <declare-styleable name="PrimarySwitcher">

    </declare-styleable>

    <declare-styleable name="PrimaryToolbar" />

    <declare-styleable name="PrimaryTextView">
        <attr name="isPreventClick" />
    </declare-styleable>

    <declare-styleable name="PrimaryImageView">
        <attr name="isPreventClick" />
    </declare-styleable>
</resources>