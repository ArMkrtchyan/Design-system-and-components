<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Light" parent="Theme.Base">
        <item name="android:windowBackground">@color/BlueGrey_50</item>
        <item name="android:statusBarColor">@color/BlueGrey_50</item>

        <!-- Backgrounds -->
        <item name="backgroundBase">@color/BlueGrey_50</item>
        <item name="backgroundBrand">@color/BrandGreen_500</item>
        <item name="backgroundBrandPressed">@color/BrandGreen_600</item>
        <item name="backgroundBrandDisable">@color/BlueGrey_200</item>
        <item name="backgroundTonal1">@color/White</item>
        <item name="backgroundTonal2">@color/BlueGrey_550_15</item>
        <item name="backgroundTonal2ReadOnly">@color/BlueGrey_550_30</item>
        <item name="backgroundTonal2Disable">@color/BlueGrey_550_10</item>

        <!-- Borders -->
        <item name="borderBase">@color/BlueGrey_650</item>
        <item name="borderPrimary">@color/BlueGrey_900</item>
        <item name="borderBrand">@color/BrandGreen_500</item>
        <item name="borderBrandTonal1">@color/BrandGreen_650</item>
        <item name="borderBrandTonal1Disable">@color/BlueGrey_350</item>
        <item name="borderSecondary">@color/White</item>
        <item name="borderNeutral">@color/BlueGrey_150</item>

        <!-- Content -->
        <item name="contentBrand">@color/BrandGreen_500</item>
        <item name="contentBrandTonal1">@color/BrandGreen_650</item>
        <item name="contentBrandTonal1Disable">@color/BlueGrey_350</item>
        <item name="contentPrimary">@color/BlueGrey_900</item>
        <item name="contentPrimaryDisable">@color/BlueGrey_600</item>
        <item name="contentPrimaryTonal1">@color/Grey_400</item>
        <item name="contentPrimaryTonal2">@color/Grey_100</item>
        <item name="contentPrimaryTonal1Disable">@color/BlueGrey_550</item>
        <item name="contentSecondary">@color/White</item>
        <item name="contentSecondaryDisable">@color/BlueGrey_400</item>

        <!-- Status -->
        <item name="statusError">@color/Red_600</item>
    </style>

    <style name="ExchangeRates" parent="">

    </style>

    <style name="TextView.Primary" parent="Body1.Regular">

    </style>

    <style name="Switcher.Primary" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="track">@drawable/switch_track</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="trackTint">@null</item>
        <item name="trackDecoration">@null</item>
        <item name="trackDecorationTint">@null</item>
        <item name="thumbTint">@color/switcher_thumb_tint</item>
        <item name="android:textAppearance">@style/Subtitle1.Regular</item>
        <item name="android:textColor">?attr/contentPrimary</item>
    </style>

    <style name="CheckBox.Primary" parent="Widget.Material3.CompoundButton.CheckBox">

        <item name="android:textAppearance">@style/Subtitle1.Regular</item>
        <item name="android:textColor">?attr/contentPrimary</item>
    </style>

    <style name="RadioButton.Primary" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/Subtitle1.Regular</item>
        <item name="android:textColor">?attr/contentPrimary</item>
    </style>

    <style name="Toolbar.Primary" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/backgroundBase</item>
        <item name="titleTextAppearance">@style/MyTitleTextAppearance</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="navigationIconTint">?attr/contentPrimary</item>
    </style>

    <style name="MyTitleTextAppearance" parent="Body1.Bold">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ImageView.Primary" parent="">

    </style>
</resources>