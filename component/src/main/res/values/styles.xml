<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Green_500</item>
        <item name="colorPrimaryDark">@color/Green_600</item>
        <item name="colorAccent">@color/White</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowBackground">@color/BlueGrey_50</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <!-- Backgrounds -->
        <item name="backgroundBase">@color/BlueGrey_50</item>
        <item name="backgroundBrand">@color/Green_500</item>
        <item name="backgroundBrandPressed">@color/Green_600</item>
        <item name="backgroundBrandDisable">@color/BlueGrey_200</item>
        <item name="backgroundSecondary">@color/White</item>
        <item name="backgroundNeutral">@color/BlueGrey_150</item>
        <item name="backgroundNeutralReadOnly">@color/BlueGrey_250</item>

        <!-- Borders -->
        <item name="borderBase">@color/BlueGrey_650</item>
        <item name="borderPrimary">@color/BlueGrey_900</item>
        <item name="borderBrand">@color/Green_500</item>
        <item name="borderBrandTonal1">@color/Green_650</item>
        <item name="borderBrandTonal1Disable">@color/BlueGrey_350</item>
        <item name="borderSecondary">@color/White</item>
        <item name="borderNeutral">@color/BlueGrey_150</item>

        <!-- Content -->
        <item name="contentBrand">@color/Green_500</item>
        <item name="contentBrandTonal1">@color/Green_650</item>
        <item name="contentBrandTonal1Disable">@color/BlueGrey_350</item>
        <item name="contentPrimary">@color/BlueGrey_900</item>
        <item name="contentPrimaryDisable">@color/BlueGrey_600</item>
        <item name="contentPrimaryTonal1">@color/Grey_400</item>
        <item name="contentPrimaryTonal2">@color/Grey_100</item>
        <item name="contentPrimaryTonal1Disable">@color/BlueGrey_550</item>
        <item name="contentSecondary">@color/White</item>
        <item name="contentSecondaryDisable">@color/BlueGrey_400</item>

        <!-- Status -->
        <item name="statusError">@color/Red_600</item>


        <!--        <item name="commonToolbarStyle">@style/CommonToolbarStyle</item>-->
    </style>

    <style name="AppThemeLight" parent="BaseAppTheme" />

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/Green_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle" parent="BaseButtonStyle" />

    <style name="BaseCommonToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:height">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/MyTitleTextAppearance</item>
    </style>

    <style name="MyTitleTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CommonToolbarStyle" parent="BaseCommonToolbarStyle" />

    <style name="BaseTextStyle">
        <item name="android:textColor">?attr/contentPrimary</item>
    </style>
</resources>